<!DOCTYPE html>
<html>
  <head>
    <title><%= t "app.bookapp" %></title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": true %>
    <%= javascript_include_tag "application", "data-turbolinks-track": true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <div id="messagebox">
        <% flash.each do |message_type, message| %>
          <%= content_tag :div, message, class: "alert alert-#{message_type} text-center" %>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
