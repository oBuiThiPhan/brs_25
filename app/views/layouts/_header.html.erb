<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to t("app.bookapp"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("app.home"), root_path %></li>
        <li><%= link_to t("app.help"), help_path %></li>

        <% if logged_in? %>
          <li><%= link_to t("app.books"), books_path %></li>
          <li><%= link_to t("app.user"), users_path %></li>
          <li><%= link_to t("app.requests"), requests_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "app.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("app.profile"), current_user %></li>
              <li><%= link_to t("app.set"), edit_user_path(current_user) %></li>
              <li>
                <%= link_to t("app.logout"), logout_path, method: "delete" %>
              </li>
              <li class="divider"></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
